{
  "name": "url-shortener-app",
  "version": "1.0.0",
  "description": "Full-stack URL Shortener with React frontend and Node.js backend",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend\" --names \"API,UI\" --prefix-colors \"yellow,cyan\"",
    "frontend": "cd Frontend && npm run dev",
    "backend": "cd RESTApi && npm start",
    "backend:dev": "cd RESTApi && npm run dev",
    "install:all": "npm install && cd Frontend && npm install && cd ../RESTApi && npm install"
  },
  "keywords": [
    "url-shortener",
    "react",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
